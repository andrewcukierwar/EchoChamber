{

  "name": "Political Awareness",
  "description": "Become more politically aware. See where the articles you're reading fall on the political spectrum.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [ {
    "js": [ "jquery.js", "content_script.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
