{
  "name": "Echo Chamber",
  "description": "Become more politically aware. See where the articles you're reading fall on the political spectrum.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://allenhao.me/"
  ],
  "background": {
	  "scripts": ["background.js"],
	  "persistent": false
  },
  "web_accessible_resources": [ "loading.svg", "close.svg", "boundary/boundary-extra.css", "banner_elements.css"],
  "browser_action": {
    "default_icon": "DonkeyElephant.png"
  },
  "manifest_version": 2
}
