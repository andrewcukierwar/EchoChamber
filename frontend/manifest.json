{
  "name": "Echo Chamber",
  "description": "Become more politically aware. See where the articles you're reading fall on the political spectrum.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "https://allenhao.me/"
  ],
  "content_scripts": [{
	  "matches": [ "http://*/*", "https://*/*" ],
	  "js": [ "jquery.js", "content_script.js" ]
  }],
  "background": {
	  "scripts": ["background.js"],
	  "persistent": false
  },
  "browser_action": {
    "default_icon": "DonkeyElephant.png"
  },
  "manifest_version": 2
}
